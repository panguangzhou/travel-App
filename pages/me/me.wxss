/* pages/me/me.wxss */
.bigBody{
  background:#F5F5F5 ;
}
.top_header{
  width: 100%;
  height: 150px;
  text-align: center;
  padding-bottom: 20px;
  padding-top: 20px;
  background: #fff;
}
.top_header .logo{
  height: 100px;
  display: flex;
}
.top_header .logo .small_logo{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin: auto;
  overflow: hidden;
}
/* 登录 */
.login{
  margin: 5px 0;
  height: 20px;
  padding:5px 10px;
  width: 100%;
  background: #fff;
  
}
.login .login_p{
  font-size: 12px;
  display:block;
  float: left;
}
.login .login_btn{
  display: block;
  width: 80px;
  height: 20px;
  background: orange;
  color:#fff;
  float: right;
  line-height: 20px;
  border-radius: 0;
  margin-right: 20px;
}

/* 我的订单 */
.page__category-content{
  background: #fff;
}
.weui-cell_access {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    color: inherit;
}
.weui-cell {
    padding: 10px 15px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.weui-cell__bd {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}
.weui-cell_access .weui-cell__ft {
    padding-right: 13px;
    position: relative;
}
.weui-cell__ft {
    text-align: right;
    color: #808080;
}
/* 我的卡包 */
.card{
  background: #fff;
  border-top: 1px solid #808080;
  margin-bottom: 5px;
}
.card .weui-flex{
  display: flex;
  padding: 10px 0 10px 30px;
}
.card .weui-flex__item {
    flex: 1;
    display: flex;
}
.card .page.flex .placeholder {
    padding: 0 10px;
    background-color: #ebebeb;
    height: 2.3rpx;
    line-height: 2.3rpx;
    color: #cfcfcf;
    margin:auto;
    text-align:center;
}
.card .card-img{
  height: 1em;
  width: 2em;
  display: block;
}
.card .card_p{
  font-size: 12px;
}
/* 各种小卡片 */
.moreCard{
  margin-top: 5rpx;
}
.moreCard .weui-cell{
  border-bottom: 1px solid #ccc;
}

/* 下面技术支持板块 */
.support{
  width: 100%;
  height: 100px;
  display: flex;
}
.support .support_box{
  width: 120px;
  margin: auto;
  font-size: 12px;
  color:yellow;
}