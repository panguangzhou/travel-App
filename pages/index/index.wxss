}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
/* 选项卡 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.box{
  width: 100%;
}
.box_item{
  height: 50px;
  background: #F5F5F5;
  line-height: 50px;
  font-size:12px;
  text-align:center;
}
.box_active{
  height: 50px;
  background: #fff;
  border-left:3px solid orange;
  line-height: 50px;
  font-szie:16px;
  text-align:center;
}
.box .col-7{
  height: 600px;
}
